# Fullstack Bootcamp - Environment Variables Template
# Copy this file to .env and update with your values

# ===========================================
# Database Configuration (Both Paths)
# ===========================================
DATABASE_URL=postgresql://postgres:dev_password@localhost:5432/bootcamp_db

# Optional: Separate test database
TEST_DATABASE_URL=postgresql://postgres:dev_password@localhost:5432/bootcamp_test_db

# ===========================================
# Flask Configuration (Software Engineering)
# ===========================================
FLASK_APP=app.py
FLASK_ENV=development
FLASK_DEBUG=1

# Security
SECRET_KEY=dev-secret-change-in-production-use-secrets-token-hex-32
JWT_SECRET_KEY=dev-jwt-secret-change-in-production

# ===========================================
# React/Frontend Configuration (Software Engineering)
# ===========================================
REACT_APP_API_URL=http://localhost:5000
REACT_APP_ENVIRONMENT=development

# ===========================================
# Jupyter Configuration (Data Analysis)
# ===========================================
JUPYTER_ENABLE_LAB=yes
JUPYTER_PORT=8888

# Optional: Set token for security (leave empty for local dev)
# JUPYTER_TOKEN=

# ===========================================
# External Data Sources (Data Analysis - Optional)
# ===========================================
# API keys for financial data exercises
# Sign up at respective platforms to get keys

# Alpha Vantage (stock data)
# ALPHA_VANTAGE_API_KEY=your_key_here

# Quandl (financial datasets)
# QUANDL_API_KEY=your_key_here

# FRED (Federal Reserve Economic Data)
# FRED_API_KEY=your_key_here

# ===========================================
# Testing Configuration
# ===========================================
TESTING=False

# ===========================================
# Development Settings
# ===========================================
# Set to production when deploying
ENVIRONMENT=development

# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=DEBUG

# ===========================================
# Docker Configuration
# ===========================================
# Postgres container settings (if using docker-compose)
POSTGRES_USER=postgres
POSTGRES_PASSWORD=dev_password
POSTGRES_DB=bootcamp_db
POSTGRES_PORT=5432

# ===========================================
# CI/CD Configuration (Day 9+)
# ===========================================
# Add CI/CD specific variables here as you progress through the curriculum
# Example: deployment keys, staging URLs, etc.
